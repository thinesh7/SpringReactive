package com.bms.util;

import org.springframework.beans.BeanUtils;

import com.bms.entities.Customer;

public class AppUtils<R, T> {

	public R convertCustomerDTOtoEntity(T dto) {
		System.out.println("In");
		Customer entity = (Customer) new Object();
		System.out.println(entity);
		BeanUtils.copyProperties(dto, entity); // Source --> Destination
		return entity;
	}

	public R converEntityToDTO(T entity) {
		R dto = (R) new Object();
		BeanUtils.copyProperties(entity, dto); // Source --> Destination
		return dto;
	}

}
